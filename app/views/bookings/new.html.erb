<h3>Book your flight</h3>
<p>Depart: <%= @flight.departure_airport.code %></p>
<p>Arrive: <%= @flight.arrival_airport.code %></p>
<p>Date: <%= @flight.date %></p>
<p>Departure time: <%= @flight.clean_time %></p>

<%= simple_form_for @booking do |f| %>
  <%= f.simple_fields_for :passengers do |p| %>
    <%= p.input :name %>
    <%= p.input :email %>
  <% end %>
  <%= f.input :flight_id, as: :hidden, input_html: { value: @flight.id } %>
  <%= f.button :submit %>
<% end %>